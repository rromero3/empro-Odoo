<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

        <record model="ir.ui.view" id="empro_hr_extra">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="/form[@string='Employee']/sheet/div[1]/h1" position="after">
                 <label for="legal_name" class="oe_edit_only"/>
                            <h3>
                                <field name="legal_name"/>
                            </h3>
            </xpath>
            <xpath expr="/form[@string='Employee']/sheet/div[1]/h1" position="after">
                 <label for="employee_code" class="oe_edit_only"/>
                            <h1>
                                <field name="employee_code"/>
                            </h1>
            </xpath>

            <xpath expr="/form[@string='Employee']/sheet/notebook/page[3]/group/group[@string='Contract']/field[last]" position="after">
                 <label for="years_hired"/>
                 <field name="years_hired"/>
            </xpath>




        </field>
        </record>

  </data>
</openerp>